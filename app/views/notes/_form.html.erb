
<%= simple_form_for(note) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs pb-1 bg-white border rounded mb-1 ps-2">
    <%= f.input :title, label: false, input_html: { placeholder: 'Note Title', class: 'form-control-plaintext' } %>
    <%= f.input :body, label: false, input_html: { placeholder: 'Note Body', class: 'form-control-plaintext' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
